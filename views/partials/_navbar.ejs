<style>
  nav {
    background-color: rgba(0, 0, 0, 0.8);
    padding: 15px 30px;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
    border-radius: 8px;
    margin: 20px auto;
    max-width: 1200px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.3);
  }

  nav a {
    color: white;
    text-decoration: none;
    font-weight: bold;
    padding: 8px 15px;
    border-radius: 5px;
    transition: background 0.3s, color 0.3s;
  }

  nav a:hover {
    background-color: #007bff;
    color: white;
  }

  @media (max-width: 700px) {
    nav {
      gap: 10px;
      padding: 10px 15px;
    }
  }
</style>

<nav>
  <a href="/">Home</a>
  <a href="/events">Events</a>
  <a href="/events/category/Venue">Venue</a>
  <a href="/events/category/Ballet">Ballet</a>
  <a href="/events/category/Runway">Runway</a>
  <a href="/events/category/Art%20Gallery">Art Gallery</a>

  <% if (user) { %>
    <a href="/users/<%= user._id %>">Profile</a>
    <a href="/auth/sign-out">Sign Out</a>
  <% } else { %>
    <a href="/auth/sign-in">Sign In</a>
    <a href="/auth/sign-up">Sign Up</a>
  <% } %>
</nav>
