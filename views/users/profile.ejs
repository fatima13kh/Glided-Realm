</head><!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= profileUser.username %>'s Profile</title>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; margin: 20px; }
        h1, h2 { margin-top: 30px; }
        ul { list-style: disc; margin-left: 20px; }
        li { margin-bottom: 10px; }
        button { margin-top: 10px; padding: 5px 10px; cursor: pointer; }
    </style>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>

    <h1><%= profileUser.username %>'s Profile</h1>

    <!-- User details -->
    <div>
        <p><strong>Username:</strong> <%= profileUser.username %></p>
        <p><strong>Email:</strong> <%= profileUser.email %></p>
        <p><strong>Phone:</strong> <%= profileUser.phoneNumber %></p>
        <a href="/users/<%= profileUser._id %>/edit"><button>Edit Profile</button></a>
    </div>

    <!-- Posted Events -->
    <h2>Posted Events</h2>
    <% if (postedEvents.length > 0) { %>
        <ul>
            <% postedEvents.forEach(event => { %>
                <li><a href="/events/<%= event._id %>"><%= event.title %></a></li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No events posted yet.</p>
    <% } %>

    <!-- Favourite Events -->
    <h2>Favourite Events</h2>
    <% if (favouriteEvents.length > 0) { %>
        <ul>
            <% favouriteEvents.forEach(event => { %>
                <li><a href="/events/<%= event._id %>"><%= event.title %></a></li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No favourite events yet.</p>
    <% } %>

    <!-- Booked Events -->
    <h2>Booked Events</h2>
    <% if (bookedEvents && bookedEvents.length > 0) { %>
        <ul>
            <% 
                // Aggregate bookings by event
                const eventBookings = {};
                bookedEvents.forEach(event => {
                    event.attendees.forEach(att => {
                        if (att.user._id.toString() === profileUser._id.toString()) {
                            if (!eventBookings[event._id]) {
                                eventBookings[event._id] = {
                                    event,
                                    totalTickets: 0,
                                    totalPaid: 0,
                                };
                            }
                            eventBookings[event._id].totalTickets += att.quantity;
                            eventBookings[event._id].totalPaid += att.totalPaid;
                        }
                    });
                });

                Object.values(eventBookings).forEach(eb => {
            %>
                <li>
                    <strong>Event:</strong> <a href="/users/<%= profileUser._id %>/tickets/<%= eb.event._id %>"><%= eb.event.title %></a><br>
                    <strong>Type:</strong> <%= eb.event.type %><br>
                    <strong>Event Owner:</strong> <%= eb.event.owner.username %><br>
                    <strong>Date:</strong> <%= eb.event.eventDate.toDateString() %><br>
                    <strong>Start Time:</strong> <%= eb.event.startTime %><br>
                    <strong>End Time:</strong> <%= eb.event.endTime %><br>
                    <strong>Location:</strong> <%= eb.event.location %><br>
                    <strong>Your Booking</strong><br>
                    Total Tickets Booked: <%= eb.totalTickets %><br>
                    Total Paid: BHD <%= eb.totalPaid.toFixed(3) %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No booked events yet.</p>
    <% } %>

</body>
</html>
